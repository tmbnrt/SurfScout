<Window x:Class="SurfScout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurfScout"
        mc:Ignorable="d"
        Title="SurfScout" Height="450" Width="800">
    <Grid Name ="MainGrid">

        <!-- Burger menu toggle -->
        <ToggleButton x:Name="MenuToggleButton"
                        Width="50" Height="50" Margin="20"
                        VerticalAlignment="Top" HorizontalAlignment="Left"
                        Content="☰"
                        FontSize="28"
                        Background="#40FFFFFF"
                        BorderBrush="Transparent"
                        Foreground="Black"
                        Cursor="Hand"
                        Checked="MenuToggleButton_Checked"
                        Unchecked="MenuToggleButton_Unchecked"
                        Panel.ZIndex="10">
            <ToggleButton.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
            </ToggleButton.Effect>
        </ToggleButton>

        <!-- Overlay menu -->
        <Border x:Name="MenuOverlay" Background="WhiteSmoke" Width="250"
        VerticalAlignment="Stretch" HorizontalAlignment="Left"
        Visibility="Collapsed" Panel.ZIndex="9" Padding="10">
            <StackPanel>
                <Image Source="pack://application:,,,/SurfScout;component/graphics/logo.png" Margin="0,0,0,10"/>

                <Button x:Name="buttonDashboard" Style="{StaticResource MenuButtonStyle}">
                    <TextBlock Text="Dashboard" FontSize="16"/>
                </Button>

                <Button x:Name="buttonMapViewer" Style="{StaticResource MenuButtonStyle}">
                    <TextBlock Text="Map Viewer" FontSize="16"/>
                </Button>

                <Button x:Name="buttonWindAnalytics" Style="{StaticResource MenuButtonStyle}">
                    <TextBlock Text="Wind Analytics" FontSize="16"/>
                </Button>

                <Button x:Name="buttonForecastAnalysis" Style="{StaticResource MenuButtonStyle}">
                    <TextBlock Text="Forecast Analysis" FontSize="16"/>
                </Button>

                <Button x:Name="buttonSessionPlanner" Style="{StaticResource MenuButtonStyle}">
                    <TextBlock Text="Session Planner" FontSize="16"/>
                </Button>

                <Button x:Name="buttonForum" Style="{StaticResource MenuButtonStyle}">
                    <TextBlock Text="Forum" FontSize="16"/>
                </Button>

                <TextBlock Height="100"/>

                <Button x:Name="buttonInfo" Content="Info" Height="40" FontSize="16" Background="WhiteSmoke" Margin="5,2"/>
                <Button x:Name="buttonQuit" Content="Quit" FontWeight="Bold" Height="42" FontSize="18" Background="LightGray" Margin="5,2"/>
            </StackPanel>
        </Border>

        <!-- Home Grid !-->
        <Grid Name="HomeScreen" Grid.Row="0" Grid.RowSpan="2" Margin="0" Visibility="Visible">
            <!-- Background image -->
            <Image Source="pack://application:,,,/SurfScout;component/graphics/home.jpg"
           Stretch="Fill"/>

            <!-- Overlay including welcome text -->
            <Border Background="#AA000000" VerticalAlignment="Top" Height="100">
                <TextBlock Text="Welcome to Surf Scout"
                   Foreground="White"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Margin="20"/>
            </Border>
        </Grid>

        <!-- User login !-->
        <Grid Name="UserLogin" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Switch login / register -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                    <ToggleButton x:Name="LoginToggle" Content="Login" IsChecked="True" Height="25" Width="100" Margin="5"
                  Style="{StaticResource ToggleTabStyle}"/>
                    <ToggleButton x:Name="RegisterToggle" Content="Register" Height="25" Width="100" Margin="5"
                  Style="{StaticResource ToggleTabStyle}"/>
                </StackPanel>

                <!-- Form -->
                <Grid Grid.Row="1" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <!-- Username -->
                        <RowDefinition Height="Auto"/>
                        <!-- Email -->
                        <RowDefinition Height="Auto"/>
                        <!-- Password -->
                        <RowDefinition Height="Auto"/>
                        <!-- Sportarten -->
                        <RowDefinition Height="Auto"/>
                        <!-- Login Button -->
                        <RowDefinition Height="40"/>
                        <!-- Register Button -->
                        <RowDefinition Height="40"/>                        
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Username -->
                    <TextBlock Text="User name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox x:Name="UsernameBox" Grid.Row="0" Grid.Column="1"/>

                    <!-- Email (only for registration) -->
                    <TextBlock x:Name="EmailLabel" Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" Visibility="Collapsed"/>
                    <TextBox x:Name="EmailBox" Grid.Row="1" Grid.Column="1" Visibility="Collapsed"/>

                    <!-- Password -->
                    <TextBlock Text="Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1"/>

                    <!-- Sport selection (only for registration) -->
                    <TextBlock x:Name="SportLabel" Text="Windsports:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,10" Visibility="Collapsed"/>
                    <WrapPanel x:Name="SportSelectionPanel" Grid.Row="3" Grid.Column="1" Visibility="Collapsed" HorizontalAlignment="Left">
                        <ToggleButton x:Name="ToggleWindsurfing" Content="Windsurfing" Style="{StaticResource CompactSportToggleStyle}"/>
                        <ToggleButton x:Name="ToggleKitesurfing" Content="Kitesurfing" Style="{StaticResource CompactSportToggleStyle}"/>
                        <ToggleButton x:Name="ToggleWingfoiling" Content="Wingfoiling" Style="{StaticResource CompactSportToggleStyle}"/>
                    </WrapPanel>

                    <!-- Login button -->
                    <Button x:Name="buttonLogin" Content="Login" Grid.Row="3" Grid.ColumnSpan="2"
                        Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Center" Visibility="Visible"/>

                    <!-- Register button -->
                    <Button x:Name="buttonRegister" Content="Register" Grid.Row="4" Grid.ColumnSpan="2"
                        Style="{StaticResource FormButtonStyle}" HorizontalAlignment="Center" Visibility="Collapsed"/>

                </Grid>
            </Grid>
        </Grid>

        <!-- Dashboard !-->
        <Grid Name="Dashboard" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40" Width="400" Background="#F8F8F8">
                    <!-- User account -->
                    <Expander Header="👤 User Account" IsExpanded="True" Style="{StaticResource DashboardExpanderStyle}" Margin="0,10">
                        <StackPanel Margin="10">
                            <TextBlock Text="Logged in as:" FontWeight="Bold"/>
                            <TextBox x:Name="UsernameEditBox" Width="200" Margin="0,5"/>
                            <Button x:Name="buttonChangeName" Content="Change user name" Style="{StaticResource FormButtonStyle}" Margin="0,5"/>
                            <Button x:Name="buttonLogout" Content="Logout" Style="{StaticResource FormButtonStyle}" Margin="0,5"/>
                        </StackPanel>
                    </Expander>

                    <!-- Sports mode -->
                    <Expander Header="🏄‍ Wind Sport Mode" Style="{StaticResource DashboardExpanderStyle}" Margin="0,10">
                        <StackPanel Margin="10">
                            <TextBlock Text="Current mode:" FontWeight="Bold"/>
                            <TextBlock x:Name="textBlockSportMode" Margin="0,5"/>
                            <ComboBox x:Name="comboSportOptions" Width="200" Margin="0,5">
                            </ComboBox>
                            <Button x:Name="buttonSwitchSportMode" Content="Switch mode" Style="{StaticResource FormButtonStyle}" Margin="0,5"/>
                            <ComboBox x:Name="comboAddSportOptions" Width="200" Margin="0,5">
                            </ComboBox>
                            <Button x:Name="buttonAddSport" Content="Add sport" Style="{StaticResource FormButtonStyle}" Margin="0,5"/>
                        </StackPanel>
                    </Expander>

                    <!-- Connections -->
                    <Expander Header="🤝 Connections" Style="{StaticResource DashboardExpanderStyle}" Margin="0,10">
                        <StackPanel Margin="10">
                            <TextBlock Text="Your Connections:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ListBox x:Name="listUserConnections" Height="100"/>
                            <TextBlock Text="Requests:" FontWeight="Bold"/>
                            <ListBox x:Name="listConnectionRequests" Height="100"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Button x:Name="buttonAcceptConnectionRequest" Content="Accept" Width="100" Style="{StaticResource FormButtonStyle}"/>
                                <Button x:Name="buttonRejectConnectionRequest" Content="Reject" Width="100" Style="{StaticResource FormButtonStyle}" Margin="10,0,0,0"/>
                            </StackPanel>
                            <TextBlock Text="Send request to user:" FontWeight="Bold" Margin="0,10,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBox x:Name="textBoxTargetUsername" Width="200" Margin="0,0,10,0"/>
                                <Button x:Name="buttonSendConnectionRequest" Content="Send Request" Width="120" Style="{StaticResource FormButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Danger Zone -->
                    <Expander Header="⚠️ Danger Zone" Style="{StaticResource DashboardExpanderStyle}" Margin="0,10">
                        <StackPanel Margin="10">
                            <Button Content="Delete all sessions" Background="Orange" Foreground="White" Style="{StaticResource FormButtonStyle}" Margin="0,5"/>
                            <Button Content="Delete account" Background="Red" Foreground="White" Style="{StaticResource FormButtonStyle}" Margin="0,5"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Map Viewer Grid !-->
        <Grid Name="MapViewer" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Tool bar -->
                <ColumnDefinition Width="*"/>
                <!-- Map -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar Container -->
            <Grid Grid.Column="0" Margin="10" Panel.ZIndex="2">
                <!-- Original Vertical Toolbar -->
                <StackPanel x:Name="MapToolbar"
                    Orientation="Vertical"
                    Background="#AAFFFFFF"
                    Width="160"
                    Visibility="Visible">
                    <TextBlock Text="Tools" FontWeight="Bold" FontSize="16" Margin="10"/>
                    <Button x:Name="buttonMapAddSpot" Content="Add new spot" Height="40" Margin="10"/>
                    <Button x:Name="buttonDrawPoint" Content="Draw Point" Height="40" Margin="10"/>
                    <Button x:Name="buttonDrawPolygon" Content="Draw Polygon" Height="40" Margin="10"/>
                    <Button x:Name="buttonMeasureDistance" Content="Measure Distance" Height="40" Margin="10"/>
                </StackPanel>

                <!-- Spot Interaction Sidebar -->
                <Border x:Name="SpotSidebar"
                Background="WhiteSmoke"
                Width="220"
                Padding="10"
                Visibility="Collapsed"
                Panel.ZIndex="3">
                    <StackPanel>
                        <TextBlock x:Name="SidebarSpotName" Text="Spot-Info" FontWeight="Bold" Margin="5"/>
                        <TextBlock Text="Lorem ipsum ..." Margin="5"/>

                        <!-- Action buttons -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button x:Name="buttonSidebarShowSessions" Content="List sessions" Width="80" Margin="5"/>
                            <Button x:Name="buttonSidebarAddSession" Content="Add Session" Width="80" Margin="5"/>
                        </StackPanel>

                        <!-- Admin buttons -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button x:Name="buttonSidebarSetWindFetch" IsEnabled="False" Content="Set wind fetch" Width="80" Margin="5"/>
                            <Button x:Name="buttonSidebarShowWindFetch" Content="Show wind field" Width="90" Margin="5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button x:Name="buttonSidebarSpotRename" IsEnabled="False" Content="Rename spot" Width="80" Margin="5"/>
                        </StackPanel>

                        <!-- Close button -->
                        <Button x:Name="buttonCloseSidebar" Content="❌ Close" Width="80" Margin="10"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Map -->
            <esri:MapView x:Name="SpotView" Grid.Column="1"/>

            <!-- Polygon interaction popups -->
            <Popup x:Name="PolygonPopup"
                Placement="Relative"
                HorizontalOffset="{Binding ActualWidth, ElementName=MainGrid}"
                VerticalOffset="0"
                IsOpen="False"
                AllowsTransparency="True"
                StaysOpen="True">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Wind fetch area"/>
                        <Button x:Name="buttonSavePolygon" Content="Save"/>
                        <Button x:Name="buttonCancelPolygon" Content="Cancel"/>
                    </StackPanel>
                </Border>
            </Popup>
            <Popup x:Name="ShowPolygonPopup"
                Placement="Relative"
                HorizontalOffset="{Binding ActualWidth, ElementName=MainGrid}"
                VerticalOffset="0"
                IsOpen="False"
                AllowsTransparency="True"
                StaysOpen="True">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Wind fetch area"/>
                        <Button x:Name="buttonShowPolygonVectorPoints" Content="Show points"/>
                        <Button x:Name="buttonClosePolygon" Content="Close"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Sessions list popup !-->
            <Popup x:Name="SessionsPopup"
                   Placement="RelativePoint"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   IsOpen="False">
                <Border Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1">
                    <Grid Width="320" Height="240" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Title -->
                            <RowDefinition Height="Auto"/>
                            <!-- Column headers -->
                            <RowDefinition Height="*"/>
                            <!-- List -->
                        </Grid.RowDefinitions>

                        <TextBlock Text="Surf Sessions" FontWeight="Bold" Margin="10"/>

                        <!-- Header line -->
                        <Grid Grid.Row="1" Margin="10,0,10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Date" FontWeight="SemiBold" Grid.Column="0"/>
                            <TextBlock Text="Surfer" FontWeight="SemiBold" Grid.Column="1"/>
                            <TextBlock Text="Rating" FontWeight="SemiBold" Grid.Column="2"/>
                            <TextBlock Text="Action" FontWeight="SemiBold" Grid.Column="3"/>
                        </Grid>

                        <!-- Session list -->
                        <ScrollViewer Grid.Row="2">
                            <ListView x:Name="SessionListView" Margin="10">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Date}" Grid.Column="0"/>
                                            <TextBlock Text="{Binding Username}" Grid.Column="1" HorizontalAlignment="Center"/>

                                            <!-- Star rating -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <ItemsControl ItemsSource="{Binding RatingStars}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="★" Foreground="Gold" FontSize="14" Margin="0,0,2,0"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!-- Wind analysis button -->
                                            <Button Content="Wind Analysis"
                                                    Grid.Column="3"
                                                    Margin="5,0,0,0"
                                                    Click="ButtonShowWindField_Click"
                                                    Tag="{Binding SessionId}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Popup>

            <!-- Slider bar for wind field plot !-->
            <Slider x:Name="TimeSlider"
                    Minimum="0"
                    Maximum="23"
                    TickFrequency="3"
                    IsSnapToTickEnabled="True"
                    Visibility="Collapsed"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Width="200"
                    Height="40"
                    Margin="0,0,0,20"
                    Panel.ZIndex="99">
                <Slider.Style>
                    <Style TargetType="Slider">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#AA000000"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <!-- TickBar oben -->
                                        <TickBar x:Name="TopTick"
                                                 Placement="Top"
                                                 Fill="White"
                                                 Minimum="{TemplateBinding Minimum}"
                                                 Maximum="{TemplateBinding Maximum}"
                                                 TickFrequency="3"
                                                 Visibility="Visible"
                                                 Height="10"
                                                 Margin="0,0,0,5"/>

                                        <!-- Track mit Thumb -->
                                        <Track x:Name="PART_Track"
                                               IsDirectionReversed="False"
                                               Maximum="{TemplateBinding Maximum}"
                                               Minimum="{TemplateBinding Minimum}"
                                               Value="{TemplateBinding Value}">
                                            <Track.Thumb>
                                                <Thumb x:Name="PART_Thumb"
                                                       Width="10"
                                                       Height="20"
                                                       Background="White"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Slider.Style>
            </Slider>


        </Grid>

        <!-- Wind Analytics Grid !-->
        <Grid Name="WindAnalysis" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">
            <esri:MapView x:Name="WindView" Grid.Column="1"/>

            <!-- Popup if no session is selected !-->
        </Grid>

        <!-- Forecast Analysis Grid !-->
        <Grid Name="ForecastAnalysis" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">

        </Grid>

        <!-- Sessions Planner Grid !-->
        <Grid Name="SessionPlanner" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">
            <!-- TODO: Create user story :: As a [role], I want to [function], so that [benefit]. -->
            <!--                                                                                  -->
            <!-- This session grid contains all planned sessions at different spots -->
            <!-- There should be a list of spots that are available in the database -->
            <!-- A user can plan a session and can send a participation request to friends -->
            <!-- There should be a list of planned sessions of friends where the user can participate -->
            <!-- If a user plans a session, the program has to check for sessions that are already planned by friends: PARTICIPATE FUNCTION -->
            <!-- Friends can accept an invitation and people can group up, so everyone knows who is going -->
            <!-- After the session is over users can rate the session -->
            <!-- In a common session the rating is the mean value of all ratings (but can be calculated hourly, mid-time of session) -->
            <!-- Figure out: Dates only or DateTime? -->
            <!-- If two groups plan a common session with a user in both groups: Merge groups but hide foreign usernames? -->
            <!-- Figure out: Is it possible to store all windfield data for the relevant time of all users/friends/group? -->
            <!-- Figure out: How does the structure of the database table look like? -->
            <!-- After opening the session planner, there should be a popup for past sessions: -Participated? -Rating! -->
            <!-- Figure out: Rating is for the mid time of the session! Is it possible to calculate and visualize an hourly rating (while showing windfield and tide)? -->
            <!-- Users always have access to their friends' sessions: Can be advantage for emergency situations (?) -->
            <!-- Even if a session is planned, there should be an option to cancel participation. In case no one is left: Delete planned session from database -->

            <StackPanel Margin="40" Background="#F8F8F8" Width="600">

                <!-- Header: Add Session -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Show All Button (left-aligned) -->
                    <Button x:Name="buttonShowAllPlannedSessions" Content="Show All" Width="100"
            Style="{StaticResource FormButtonStyle}" Grid.Column="0" HorizontalAlignment="Left" />

                    <!-- Spot Selector -->
                    <ComboBox x:Name="comboSpotSelector" Width="200" Margin="10,0,10,0"
                        DisplayMemberPath="Name" SelectedValuePath="Id"
                        Grid.Column="1" HorizontalAlignment="Right" />

                    <!-- Add Button -->
                    <Button x:Name="buttonAddPlannedSession" Content="+" Width="40" Height="40" FontSize="20"
            Style="{StaticResource FormButtonStyle}" Grid.Column="2" HorizontalAlignment="Right" />
                </Grid>

                <!-- Session List Column Headers -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Date" Grid.Column="0" FontWeight="SemiBold" Foreground="Gray" />
                    <TextBlock Text="Spot" Grid.Column="1" FontWeight="SemiBold" Foreground="Gray" />
                </Grid>

                <!-- Session List -->
                <ListView x:Name="SessionPlannerListView" ItemsSource="{Binding PlannedSessions}" Margin="0,0,0,20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,5" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Date -->
                                    <TextBlock Text="{Binding Date}" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center"/>

                                    <!-- Spot Name -->
                                    <TextBlock Text="{Binding SpotName}" Grid.Column="1" VerticalAlignment="Center"/>

                                    <!-- Participate Button -->
                                    <Button Content="Participate" Grid.Column="2" Width="100"
                                        Style="{StaticResource FormButtonStyle}"
                                        Command="{Binding ParticipateCommand}"
                                        CommandParameter="{Binding Id}"
                                        Click="SessionPlannerParticipateButton_Click" />

                                    <!-- Info Button -->
                                    <Button Content="Info" Grid.Column="3" Width="80" Margin="10,0,0,0"
                                        Style="{StaticResource FormButtonStyle}"
                                        CommandParameter="{Binding Id}"
                                        Click="SessionPlannerInfoButton_Click" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Info Popup Placeholder -->
                <Popup x:Name="SessionInfoPopup" Placement="MousePoint" IsOpen="False" StaysOpen="False">
                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Session Info" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="Details will appear here..." FontStyle="Italic" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </Popup>

            </StackPanel>

        </Grid>

        <!-- Forum Grid !-->
        <Grid Name="Forum" Margin="100,0,0,0" Visibility="Collapsed" Grid.RowSpan="2">
            <!-- This forum can be used by all registered users and is vsible to everyone !-->
        </Grid>

    </Grid>

</Window>
